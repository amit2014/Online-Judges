#include<iostream>
#include<string>

using namespace std;
int min(int a,int b,int c);
int main()
{
int t,l,i,j,k,val;
cin>>t;
string s;
for(i=0;i<t;i++)
{
cin>>s;
l=s.length();
int a[l+1][l+1];
for(j=0;j<=l;j++)
a[j][0]=0;
for(j=0;j<=l;j++)
a[l][j]=0;

for(j=l-1;j>=0;j--)
{
    for(k=1;k<=l;k++)
    {
    if((k-j)<2)
        a[j][k]=0;
    else if(s[j]==s[k-1])
    {
        a[j][k]=a[j+1][k-1];
    }
    else
    {
        a[j][k]=1+min(a[j+1][k],a[j][k-1],a[j+1][k-1]);
    }
    }
}
cout<<a[0][l]<<endl;
}
return 0;
}



int min(int a,int b,int c)
{
if(a<b && a<c)
return a;
else
if(b<a && b<c)
return b;
else
return c;
}